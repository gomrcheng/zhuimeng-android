<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="RadioColor" tools:ignore="ResourceName">
        <attr name="image_color" format="color" />
        <attr name="image_stroke_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RichEditText">
        <!-- 是否显示视频标识图标 -->
        <attr name="editor_show_video_mark" format="boolean"/>
        <!-- 视频图标资源id -->
        <attr name="editor_video_mark_resource_id" format="reference"/>
        <!-- 是否显示gif标识图标 -->
        <attr name="editor_show_gif_mark" format="boolean"/>
        <!-- 是否显示长图标识 -->
        <attr name="editor_show_long_image_mark" format="boolean"/>
        <!-- 图片和视频圆角大小 -->
        <attr name="editor_image_radius" format="dimension"/>
        <!-- 正文中标题字体大小 -->
        <attr name="editor_headline_text_size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="LineHeightEditText">
        <attr name="cursorColor" format="color"/>
        <attr name="cursorHeight" format="dimension"/>
        <attr name="cursorWidth" format="dimension"/>
    </declare-styleable>

</resources>