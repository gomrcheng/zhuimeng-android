    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="225dp"
        android:background="@mipmap/envelope_not_receive_right_icon"
        android:layout_height="85dp"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/red_icon" />

        <TextView
            android:id="@+id/red_packet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/iv_image"
            android:maxWidth="140dp"
            android:maxLines="1"
            android:text="财源滚滚，心想事成"
            android:textColor="@color/white"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_rec_type"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="未领取"
            android:layout_below="@+id/red_packet_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_image"
            android:textColor="@color/gary"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/red_packet_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_image"
            android:textColor="@color/white"
            android:textSize="10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/iv_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="3dp"
            android:text="@string/string_koihb"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_below="@+id/iv_image"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </RelativeLayout>
