<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeColor"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <include layout="@layout/wk_title_bar_layout" />


    <!-- 持卡人信息 -->
    <LinearLayout
        android:id="@+id/chikarenll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_cards_name_hint"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/bank_cards_name"
            android:background="@drawable/layout_bg"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16sp"
            android:gravity="start" />
    </LinearLayout>

    <!-- 卡号输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_cards_num_hint"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <EditText
            android:id="@+id/et_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/bank_cards_name_num"
            android:background="@drawable/layout_bg"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16sp"
            android:gravity="start" />
    </LinearLayout>

    <!-- 下一步按钮 -->
    <Button
        android:id="@+id/btn_next"
        style="@style/buttonNormal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:alpha="0.2"
        android:enabled="false"
        android:text="@string/next_st_hint"
        android:layout_marginTop="50dp"
        app:cornerRadius="@dimen/button_radian"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp" />
</LinearLayout>