<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeColor"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <include layout="@layout/wk_title_bar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_height="wrap_content">

    <!-- 卡类型 -->
    <TextView
        android:id="@+id/tv_card_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_cards_info_hint"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="32dp" />

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colorDark"
                android:text="@string/bank_cards_type_hint" />

            <TextView
                android:id="@+id/tv_card_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:textColor="@color/colorDark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="18dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>



    <!-- 手机号码 -->
    <TextView
        android:id="@+id/tv_phone_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_cards_phone_hint"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/et_bank_card_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/bank_card_phone_hint"
            android:background="@drawable/layout_bg"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp"
            android:gravity="start" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/shimingll"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shiming_hint"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="32dp" />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/colorDark"
            android:layout_height="0.4dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shiming_real_name"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="12dp" />
        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/shiming_real_name_input_hint"
            android:background="@drawable/layout_bg"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16sp"
            android:gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cert_number_hint"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="12dp" />
        <EditText
            android:id="@+id/et_cert_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="@string/cert_number_hint"
            android:background="@drawable/layout_bg"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="16sp"
            android:gravity="start" />

    </LinearLayout>


    <!-- 确认按钮 -->
        <Button
            android:id="@+id/btn_next"
            style="@style/buttonNormal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:alpha="0.2"
            android:enabled="false"
            android:text="@string/sure"
            android:layout_marginTop="30dp"
            app:cornerRadius="@dimen/button_radian"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</LinearLayout>