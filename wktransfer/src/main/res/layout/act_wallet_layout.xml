<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/wk_title_bar_layout" />



    <!-- 余额卡片 -->
    <LinearLayout
        android:id="@+id/ll_balance_card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:orientation="vertical"
        android:background="@drawable/balance_card_background"
        android:padding="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_balance_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balance_hint"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="20dp"
            android:background="@color/homeColor"/>
        <!-- 充值和提现按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_recharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recharge_hint"
                android:textColor="#FFFFFF"
                android:background="#E6B85C"
                android:textSize="16sp"
                android:gravity="center" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@color/homeColor"
                android:layout_marginHorizontal="10dp" />

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/withdrawal"
                android:textColor="#FFFFFF"
                android:background="#E6B85C"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- 功能图标区域 -->
    <LinearLayout
        android:id="@+id/ll_function_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ll_balance_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_receive_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shoufukuan"
                android:textSize="14sp"
                android:textColor="@color/colorDark"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/transationRecordLL"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_transaction" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jiaoyijilu"
                android:textSize="14sp"
                android:textColor="@color/colorDark"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/redpackte_record_ll"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_red_packet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/honbaojilu"
                android:textSize="14sp"
                android:textColor="@color/colorDark"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 固定设置列表（不使用 RecyclerView） -->
    <LinearLayout
        android:id="@+id/ll_settings_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layoutBg"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/ll_function_icons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 支付密码 -->
        <LinearLayout
            android:id="@+id/pay_pwd_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginTop="1px"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pay_pwd_hint"
                android:textSize="16sp"
                android:textColor="@color/colorDark" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>

        <!-- 免密支付 -->
        <LinearLayout
            android:id="@+id/mianmi_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mianmi_pay"
                android:textSize="16sp"
                android:textColor="@color/colorDark" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>

        <!-- 提现账户 -->
        <LinearLayout
            android:id="@+id/withdraw_accout_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/withdraw_account_hint"
                android:textSize="16sp"
                android:textColor="@color/colorDark" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>

        <!-- 客服列表 -->
        <LinearLayout
            android:id="@+id/kefu_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/kefu_list"
                android:textSize="16sp"
                android:textColor="@color/colorDark" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/ic_arrow_right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>