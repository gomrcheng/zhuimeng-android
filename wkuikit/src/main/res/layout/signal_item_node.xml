<!-- res/layout/item_node.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNodeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="backup-1"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/colorDark" />
        <ImageView
            android:id="@+id/iv_item_select"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:src="@mipmap/duigou"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="129ms"
                android:textSize="14sp"
                android:textColor="@color/colorDark" />
            <ImageView
                android:id="@+id/ivSignalIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/dian_red"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备用线路1"
            android:textSize="12sp"
            android:textColor="@color/colorDark" />
        <TextView
            android:id="@+id/tv_line_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>